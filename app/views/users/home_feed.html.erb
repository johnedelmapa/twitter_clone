<div class="row mt-4">
    <div class="col-4">
        <div class="card">
            <div class="card-header">
                User Information
            </div>
            <div class="card-body text-center">
                <%= gravatar_for(current_user, "profile-medium")%>
                <h5 class="mt-2"><%= current_user.name %></h5>
                <p><%= current_user.email %></p>
            </div>
            <div class="card-footer">
                <%= render "microposts/form" %>
            </div>
        </div>
    </div>

    <div class="col-8">
        <div class="card">
            <div class="card-header">
                Activity Feed
            </div>
            <div class="card-body">
               <% if @microposts.any? %>
                    <%= render @microposts %>
                    <div class="pagination justify-content-center mt-4">
                        <%= will_paginate @microposts %>
                    </div>
                    <% else %>
                    <h4 class="text-center">There's no microposts.</h4>
                <% end %>
            </div>
        </div>
    </div>
</div>